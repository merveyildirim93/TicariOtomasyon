@using TicariOtomasyon.Models.Siniflar
@model List<SatisHareketleri>
@{
    ViewBag.Title = "CariSatislar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h4>Cari Satış Detayları</h4>
<ol class="breadcrumb mb-4">
    <li class="breadcrumb-item active">Cari: @ViewBag.CariAdi</li>
</ol>
<table class="table table-hover">
    <tr>
        <th>Id</th>
        <th>Ürün</th>
        <th>Personel</th>
        <th>Tarih</th>
        <th>Adet</th>
        <th>Fiyat</th>
        <th>Toplam</th>
        <th>Yazdır</th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>@item.SatisId</td>
            <td>@item.Urun.UrunAdi</td>
            <td>@item.Personel.PersonalAdi @item.Personel.PersonalSoyadi</td>
            <td>@item.Tarih.ToString("dd/MM/yyyy")</td>
            <td>@item.Adet</td>
            <td>@item.Fiyat</td>
            <td>@item.ToplamTutar</td>
            <td><a href="#" class="btn btn-info btn-sm">Yazdır</a></td>
        </tr>
    }

</table>