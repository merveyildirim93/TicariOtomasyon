@using TicariOtomasyon.Models.Siniflar
@model List<SatisHareketleri>
@{
    ViewBag.Title = "DepartmanDetay";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h4>Personel Satış Detayları</h4>
<ol class="breadcrumb mb-4">
    <li class="breadcrumb-item active">@ViewBag.PersonelAdi</li>
</ol>
<table class="table table-hover">
    <tr>
        <th>Ürün</th>
        <th>Cari</th>
        <th>Tarih</th>
        <th>Adet</th>
        <th>Fiyat</th>
        <th>Toplam</th>
        <th>Yazdır</th>
    </tr>

    @foreach (var item in Model)
    {
<tr>
    <td>@item.Urun.UrunAdi</td>
    <td>@item.Cari.CariAdi @item.Cari.CariSoyadi</td>
    <td>@item.Tarih.ToString("dd/MM/yyyy")</td>
    <td>@item.Adet</td>
    <td>@item.Fiyat ₺</td>
    <td>@item.ToplamTutar ₺</td>
    <td><a href="#" class="btn btn-info btn-sm">Yazdır</a></td>
</tr>
    }

</table>

