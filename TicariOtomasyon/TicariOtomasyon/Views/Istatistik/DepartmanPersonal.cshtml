@model IEnumerable<TicariOtomasyon.Models.Siniflar.PersonelGrupSinif>

<div class="card">
    <div class="card-header">
        <h3 class="card-title">Personel Departmanları</h3>
    </div>
    <!-- /.card-header -->
    <div class="card-body p-0">
        <table class="table">
            <thead>
                <tr>
                    <th style="width: 10px">#</th>
                    <th>Departman</th>
                    <th>Progress</th>
                    <th style="width: 40px">Adet</th>
                </tr>
            </thead>
            <tbody>
                @{ int depSiraNo = 0;}
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@{depSiraNo++;} @depSiraNo.</td>
                        <td>@item.Departman</td>
                        <td style="vertical-align: middle;">
                            <div class="progress progress-xs">
                                <div class="progress-bar bg-danger" style="width: 55%"></div>
                            </div>
                        </td>
                        <td><span class="badge bg-danger">@item.Adet</span></td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    <!-- /.card-body -->
</div>