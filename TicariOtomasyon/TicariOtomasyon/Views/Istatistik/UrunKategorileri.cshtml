@model IEnumerable<TicariOtomasyon.Models.Siniflar.KategoriGrupSinif>

<div class="card">
    <div class="card-header">
        <h3 class="card-title">Kategoriler</h3>
    </div>
    <!-- /.card-header -->
    <div class="card-body">
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th style="width: 10px">#</th>
                    <th>Kategori</th>
                    <th>Progress</th>
                    <th style="width: 40px">Adet</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>1.</td>
                        <td>@item.Kategori</td>
                        <td style="vertical-align: middle;">
                            <div class="progress progress-xs">
                                <div class="progress-bar bg-gradient-maroon" style="width: 55%"></div>
                            </div>
                        </td>
                        <td><span class="badge bg-gradient-maroon">@item.Adet</span></td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    <!-- /.card-body -->

</div>