@model IEnumerable<TicariOtomasyon.Models.Siniflar.Personel>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<table class="table table-bordered">
    <tr>
        <th> Id</th>
        <th> Görsel</th>
        <th> Personel </th>
        <th> Departman </th>
        <th>Güncelle</th>
        <th>Satışlar</th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td> @item.PersonalId</td>
            <td> <img src="@item.ProfilFotografi" width="50" height="50" class="rounded-circle" style="border:none;"/></td>
            <td> @item.PersonalAdi @item.PersonalSoyadi </td>
            <td> @item.Departman.DepartmanAdi </td>
            <td><a href="/Personel/PersonelGuncelle/@item.PersonalId" class="btn btn-sm btn-success">Güncelle</a></td>
            <td><a href="/Departman/PersonelSatislari/@item.PersonalId" class="btn btn-sm btn-primary">Satışlar</a></td>
        </tr>
    }

</table>
<a href="/Personel/PersonelEkle" style="margin-top:20px;" class="btn btn-info btn-sm">Yeni Personel</a>