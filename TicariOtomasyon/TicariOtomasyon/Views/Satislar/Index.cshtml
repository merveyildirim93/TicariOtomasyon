@using TicariOtomasyon.Models.Siniflar
@model List<SatisHareketleri>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<table class="table table-bordered" id="satislar">
    <thead>
        <tr>
            <th> Personel</th>
            <th> Cari</th>
            <th> Ürün </th>
            <th> Tarih </th>
            <th>Adet</th>
            <th>Fiyat</th>
            <th>Toplam</th>
            <th>Güncelle</th>
            <th>Detaylar</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td>@item.Personel.PersonalAdi @item.Personel.PersonalSoyadi</td>
            <td>@item.Cari.CariAdi @item.Cari.CariSoyadi</td>
            <td>@item.Urun.UrunAdi</td>
            <td>@item.Tarih.ToString("dd/MM/yyyy")</td>
            <td>@item.Adet</td>
            <td>@item.Fiyat ₺</td>
            <td>@item.ToplamTutar ₺</td>
            <td><a href="/Satislar/SatisGuncelle/@item.SatisId" class="btn btn-sm btn-success">Güncelle</a></td>
            <td><a href="/Satislar/SatisDetaylari/@item.SatisId" class="btn btn-sm btn-primary">Detaylar</a></td>

        </tr>
        }
    </tbody>
</table>
<a href="/Satislar/YeniSatis" style="margin-top:20px;" class="btn btn-info btn-sm">Yeni Satış</a>

