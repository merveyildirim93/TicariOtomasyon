@using TicariOtomasyon.Models.Siniflar
@model List<SatisHareketleri>
@{
    ViewBag.Title = "SatisDetaylari";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h4>Satış Detayları</h4>

<table class="table table-hover">
    <tr>
        <th>Id</th>
        <th>Ürün</th>
        <th>Cari</th>
        <th>Personel</th>
        <th>Tarih</th>
        <th>Adet</th>
        <th>Fiyat</th>
        <th>Toplam</th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>@item.SatisId</td>
            <td>@item.Urun.UrunAdi</td>
            <td>@item.Cari.CariAdi @item.Cari.CariSoyadi</td>
            <td>@item.Personel.PersonalAdi @item.Personel.PersonalSoyadi</td>
            <td>@item.Tarih.ToString("dd/MM/yyyy")</td>
            <td>@item.Adet</td>
            <td>@item.Fiyat</td>
            <td>@item.ToplamTutar</td>

        </tr>
    }

</table>


<td><a href="#" class="btn btn-success btn-sm">Yazdır</a></td>
