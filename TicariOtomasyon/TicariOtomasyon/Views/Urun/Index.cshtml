@using TicariOtomasyon.Models.Siniflar
@model List<Urun>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm("Index", "Urun", FormMethod.Get))
{
    <div class="input-group">
        <input class="form-control" type="text" name="search" placeholder="Ürün Ara..." aria-label="Search" aria-describedby="basic-addon2">
        <div class="input-group-append">
            <button class="btn btn-primary" type="button"><svg class="svg-inline--fa fa-search fa-w-16" aria-hidden="true" focusable="false" data-prefix="fas" data-icon="search" role="img" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 512 512" data-fa-i2svg=""><path fill="currentColor" d="M505 442.7L405.3 343c-4.5-4.5-10.6-7-17-7H372c27.6-35.3 44-79.7 44-128C416 93.1 322.9 0 208 0S0 93.1 0 208s93.1 208 208 208c48.3 0 92.7-16.4 128-44v16.3c0 6.4 2.5 12.5 7 17l99.7 99.7c9.4 9.4 24.6 9.4 33.9 0l28.3-28.3c9.4-9.4 9.4-24.6.1-34zM208 336c-70.7 0-128-57.2-128-128 0-70.7 57.2-128 128-128 70.7 0 128 57.2 128 128 0 70.7-57.2 128-128 128z"></path></svg><!-- <i class="fas fa-search"></i> --></button>
        </div>
    </div>
}
<table class="table table-bordered" style="margin-top:20px;">
    <tr>
        <th>Ürün</th>
        <th>Marka</th>
        <th>Stok</th>
        <th>Alış Fiyatı</th>
        <th>Satış Fiyatı</th>
        <th>Kategori</th>
        <th>Güncelle</th>
        <th>Sil</th>
        <th>Satış</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.UrunAdi</td>
            <td>@item.Marka</td>
            <td>@item.Stok</td>
            <td>@item.AlisFiyati</td>
            <td>@item.SatisFiyati</td>
            <td>@item.Kategori.KategoriAd</td>
            <td><a href="/Urun/UrunGuncelle/@item.UrunId" class="btn btn-sm btn-success">Güncelle</a></td>
            <td><a href="/Urun/UrunSil/@item.UrunId" class="btn btn-sm btn-danger">Sil</a></td>
            @if (item.Stok == 0)
            {
                <td><a href="/Urun/SatisYap/@item.UrunId" class="btn btn-sm btn-warning" disabled>Satış</a></td>
            }
            else
            {
                <td><a href="/Urun/SatisYap/@item.UrunId" class="btn btn-sm btn-warning">Satış</a></td>
            }
        </tr>
    }

</table>
<a href="/Urun/UrunEkle" style="margin-top:20px;" class="btn btn-info btn-sm">Yeni Ürün</a>

